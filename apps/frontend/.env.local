# Frontend Local Environment Variables
# This file contains actual configuration values for local development

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# Socket.IO Configuration
VITE_SOCKET_URL=http://localhost:5000
VITE_SOCKET_PATH=/socket.io

# Application Configuration
VITE_APP_NAME=AI Chatbot
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered chatbot with document knowledge base

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=chatbot-theme

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=2000
VITE_TYPING_INDICATOR_TIMEOUT=3000
VITE_MESSAGE_RETRY_ATTEMPTS=3
VITE_CHAT_HISTORY_LIMIT=50

# Real-time Features
VITE_ENABLE_TYPING_INDICATORS=true
VITE_ENABLE_MESSAGE_DELIVERY_STATUS=true
VITE_ENABLE_PRESENCE_INDICATORS=true
VITE_RECONNECT_ATTEMPTS=5
VITE_RECONNECT_DELAY=1000

# Knowledge Base
VITE_ENABLE_DOCUMENT_UPLOAD=true
VITE_MAX_DOCUMENT_SIZE=10485760
VITE_SUPPORTED_DOCUMENT_TYPES=pdf,docx,txt,md

# UI Configuration
VITE_SIDEBAR_DEFAULT_WIDTH=300
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_SOUND_NOTIFICATIONS=true
VITE_ENABLE_DESKTOP_NOTIFICATIONS=true

# Development
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Security
VITE_ENABLE_RATE_LIMITING=true
VITE_SESSION_TIMEOUT=3600000

# Analytics (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Error Reporting (Optional)
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_DSN=

# Feature Flags
VITE_FEATURE_VOICE_INPUT=false
VITE_FEATURE_FILE_SHARING=true
VITE_FEATURE_CONVERSATION_EXPORT=true
VITE_FEATURE_CUSTOM_THEMES=false