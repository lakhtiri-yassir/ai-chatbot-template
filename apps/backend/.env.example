# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration - Replace with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/ai-chatbot
MONGODB_DB_NAME=ai-chatbot

# Redis Configuration - Replace with your Redis connection details
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# OpenRouter API Configuration - Get your API key from OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4-turbo

# JWT Configuration - Generate a secure random string
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# CORS Configuration - Update with your frontend URL
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration - Update with your frontend URL
SOCKET_CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Session Configuration - Generate a secure random string
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# Vector Database Configuration
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7

# Cache Configuration
CACHE_TTL=3600
TYPING_INDICATOR_TTL=5